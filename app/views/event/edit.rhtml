<div id="event">
  <h1>Editing event</h1>

  <% form_tag :action => 'update', :id => @event do %>
    <%= render :partial => 'form' %>
    <%= submit_tag 'Edit' %>
  <% end %>

  <ul id="navi">
    <li><%= link_to 'Show', :action => 'show', :id => @event %></li>
    <li><%= link_to 'Back', :action => 'list' %></li>
  </ul>
</div>
